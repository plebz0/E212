<%- include('../partials/header') %>
<h1>Witamy na stronie ptaków</h1>
<p>Oto lista ptaków:</p>
<ul>
    <% birds.forEach(bird => { %>
    
        <li>
              <b>
                <a href="/birds/<%= bird._id %>/view"> <%= bird.name %></a></b> - <%= bird.overallSize %> 
             <a href="/birds/<%= bird._id %>/edit"> Edytuj</a>
              <form action="/birds/<%= bird._id %>/delete" method="POST" style="display:inline;">
                <button type="submit">Usuń</button>
            </form>
        </li>
    <% }) %>
</ul>


<%- include('../partials/footer') %>
